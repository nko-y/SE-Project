/* components/onePost/onePost.wxss */

.all{
  background-color: whitesmoke;
  width: 100%;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title{
  width: 95%;
  font-size: 30rpx;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.mainPart{
  width: 95%;
  height:125rpx;
  display: flex;
  flex-direction: row;
}

.mainLeft{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mainRight{
  width: 40%;
  height: 100%;
}

.userInformation{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
}

.userPic{
  width: 18%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.theImg{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.userName{
  width: 82%;
  height: 100%;
  margin-left: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #999999;
}

.containPart{
  width: 100%;
  height: 75rpx;
  display: flex;
  flex-direction: row;
}

.containPassage{
  width: 100%;
  height: 100%;
  font-size: 25rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.containImg{
  width: 100%;
  height: 100%;
}

.bottomOnes{
  width: 95%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
}

.theTime{
width: 30%;
height: 100%;
display: flex;
flex-direction: row;
align-items: center;
font-size: 20rpx;
color: #999999;
}

.theOther{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.iconImg{
  width: 25rpx;
  height: 25rpx;
  margin-right: 5rpx;
}

.iconText{
  font-size: 20rpx;
  color: #999999;
}