/* pages/newpost/newpost.wxss */
.flex-wrp{
  display: flex;
}
/* flex-flow 属性是 flex-direction 和 flex-wrap 的简写。 */
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
} 

.chooseboard{
  margin-top: 10rpx;
  height: 80rpx;
  align-self: baseline;
}
.boardtext{
  font-size: small;
  margin-top: 7rpx;
  text-align: match-parent;
}
.radio{
  font-size: small;
  font-weight: bold;
  text-align: center;
  transform:scale(0.8);
}
.title{
  width: 100%;
  border-style: solid hidden solid hidden;
  border-width: thin;
  border-color: gainsboro;
  height: 60rpx;
  margin-top: 5rpx;
}
.editpost{
  width: 100%;
  height: 500rpx;
}
.add_image{
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  top: 550rpx;
  left: 50rpx;
}