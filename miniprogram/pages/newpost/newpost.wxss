@import "./assets/iconfont.wxss";
/* pages/newpost/newpost.wxss */

.flex-wrp{
  display: flex;
}
/* flex-flow 属性是 flex-direction 和 flex-wrap 的简写。 */
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
} 

.chooseboard{
  margin-top: 10rpx;
  height: 80rpx;
  align-self: baseline;
}
.boardtext{
  font-size: small;
  margin-top: 7rpx;
  text-align: match-parent;
}
.radio{
  font-size: small;
  font-weight: bold;
  text-align: center;
  transform:scale(0.9);
}
.title{
  width: 100%;
  border-style: solid hidden solid hidden;
  border-width: thin;
  border-color: gainsboro;
  height: 60rpx;
  font-size: 15px;
  padding: 6px;
  margin-top: 5rpx;
}
.editpost{
  width: 100%;
  height: 900rpx;
}
.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.add_image{
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  top: 550rpx;
  left: 50rpx;
}