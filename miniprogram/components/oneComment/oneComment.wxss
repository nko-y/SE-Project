/* components/oneComment.wxss */
.userInformation{
  width: 100%;
  height: 100%;
  padding: 30rpx 0rpx 0rpx 0rpx;
  display: flex;
  flex-direction: row;
}

.userPic{
  width: 15%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.theImg{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}

.infoText{
  display: flex;
  flex-direction: column;
}

.userName{
  width: 100%;
  height: 50%;
  margin: 0%;
  /* margin-left: 5rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  /* font-weight: bold; */
  color: #D8977E;
}

.postTime{
  width: 100%;
  height: 50%;
  /* margin-left: 5rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  /* font-weight: bold; */
  color: #7e7e7e;
}

.comment-content{
  margin: 0%;
  padding: 10rpx 30rpx 0rpx 30rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

.comment-content text{
  margin: 0%;
  padding: 20rpx 0rpx;
  font-size: 28rpx;
  color: #000000;
  line-height: 44rpx;
  display: flex;
  flex-direction: column;
}

/* 非常细的灰色的分隔 */
.small-padding-line {
  position: center;
  /* padding: 30rpx; */
  height: 3rpx;
  background: rgb(238, 238, 238);
}

.operation-panel{
  padding: 5rpx 40rpx 5rpx 0rpx;
  display: flex;
  flex-direction: row-reverse;
  height: 50rpx;
}

.like-icon-text{
  font-size: 26rpx;
  color: #999999;
}

.like-icon-img{
  width: 35rpx;
  height: 35rpx;
  margin-right: 5rpx;
}